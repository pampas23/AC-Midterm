<h1>Hello 災情控制論壇</h1>

<%= link_to "發表新文章" , new_topic_path, :class => "btn btn-primary" %>


<table class="table table-hover">
	<tr>
		<th>標題</th>
		<th>內容</th>

		<th>功能</th>
		<th>最新回覆時間</th>	

	</tr>
	<tr>
		<% @topics.each do |topic| %>
			<td><%= topic.title %></td>
			<td><%= topic.content %></td>
			<td>
  				<%= link_to 'Show' , topic_path(topic) ,:class => "btn btn-info"%>
 		 		<%= link_to 'Edit', topics_path(:id => topic.id,:page => params[:page]) ,:class => "btn btn-primary" %>
		 		<%= link_to 'Delete', topic_path(topic , :page => params[:page]), :method => :delete, :data => { :confirm => "Are you sure?"}, :class => "btn btn-danger" %>
 			</td>

	</tr>
		<% end %>
</table>

<%= form_for @topic do |t| %>
	<div class="form-group">
		<%= t.label :title,"Article" %>
		<%= t.text_field :title ,:class => "form-control"%>		
	</div>

	<div class="form-group">
	    <%= t.label :content, "Content" %>
	    <%= t.text_area :content ,:class => "form-control"%>
	</div>

    <%= t.submit @sub, :class => "btn btn-primary"%>
 <%end%>
 <%= paginate @topics %>
